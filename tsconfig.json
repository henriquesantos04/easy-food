{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",                             // ðŸ‘ˆ Adicionado
    "paths": {
      "@/*": ["./*"]                            // ðŸ‘ˆ Adicionado
    }
  },
  "include": ["app", "lib"]                     // ðŸ‘ˆ Inclui a pasta lib
}

